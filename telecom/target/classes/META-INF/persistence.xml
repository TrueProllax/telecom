<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1" xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
  <persistence-unit name="telecomPU" transaction-type="RESOURCE_LOCAL">
    <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
    <class>telecom.entity.Equipment</class>
    <class>telecom.entity.Typesofequipment</class>
    <class>telecom.entity.User</class>
    <class>telecom.entity.Abonent</class>
    <class>telecom.entity.Ports</class>
    <class>telecom.entity.Informationabouttheequipment</class>
    <class>telecom.entity.Placement</class>
    <class>telecom.entity.Technicalsupport</class>
    <class>telecom.entity.Address</class>
    <class>telecom.entity.Portstype</class>
    <properties>
      <property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/telecom?serverTimzone=Europe/Moscow&amp;useSSL=false"/>
      <property name="javax.persistence.jdbc.user" value="root"/>
      <property name="javax.persistence.jdbc.driver" value="com.mysql.cj.jdbc.Driver"/>
      <property name="javax.persistence.jdbc.password" value="123456"/>
      <property name="javax.persistence.schema-generation.database.action" value="create"/>
    </properties>
  </persistence-unit>
</persistence>
